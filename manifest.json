{
    "name": "__MSG_extensionName__",
    "version": "1.1.0",
    "description": "__MSG_extensionDescription__",
    "author": "Amunak",
    "homepage_url": "https://github.com/Amunak/thunderbird-list-unsubscribe-addon",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
